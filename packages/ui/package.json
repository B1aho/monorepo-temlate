{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./*": "./src/*.tsx",
    "./main.css": "./dist/index.css"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/style/main.css -o ./dist/index.css",
    "check-types": "tsc --noEmit",
    "dev": "tailwindcss -i ./src/style/main.css -o ./dist/index.css --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "react": "^19.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  }
}
